        <input type="text" value="<%= settings['url_login_sso'] %>" name="settings[url_login_sso]" >
      </td>
    </tr>
    <tr>
      <th><%=l(:url_validate_sso)%>:</th>
      <td>
        <input type="text" value="<%= settings['url_validate_sso'] %>" name="settings[url_validate_sso]" >
